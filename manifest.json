{
  "manifest_version": 2,
  "name": "Eulexia",
  "version": "1.0",

  "description": "Making webpages more readable for learning impaired",

  "permissions": [
   "tabs",
   "activeTab"
  ],

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "browser_action": {
          "default_icon": "icon.png",
          "default_title": "Eulexia"
      },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery.min.js", "content.js"]
    }
  ]

}
